<h1>New Deadline</h1>

<div class="content">

  <%= simple_form_for @deadline , url: domain_deadlines_path(@domain), class: 'form-horizontal' do |f| %>
      <div class="form-inputs">
        <%= f.input :deadline, as: :date,  discard_day: true, label: "Échéance pour", class: 'form-control' %>
        <%= f.input :result,
                    as: :text,
                    placeholder: "Quel est le résultat attendu",
                    label: "Résultat",
                    class:'form-control' %>
        <%= f.input :target,
                    as: :text,
                    placeholder: "Pour quel but (pourquoi ?)",
                    label: "But",
                    class:'form-control' %>

      </div>
      <%= f.submit 'Ajouter', class: 'btn btn-default' %>
  <% end %>
</div>

<%= link_to 'Back', domain_deadlines_path(@domain) %>
