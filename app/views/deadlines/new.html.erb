<h1>New Deadline</h1>

<div class="content">

  <%= simple_form_for @deadline , url: domain_deadlines_path(@domain), class: 'form-horizontal' do |f| %>
      <div class="form-inputs">
        <%= f.input :deadline,
                    as: :date,
                    # start_year: Date.today.year,
                    order:[:month, :year],
                    placeholder: "Date",
                    html5:true,
                    label: "Date d'échéance",
                    class: 'form-control',
                    input_html: {value: Date.today}
        %>

        <%= f.input :result,
                    as: :text,
                    placeholder: "Quel est le résultat attendu",
                    label: "Résultat",
                    class:'form-control' %>
        <%= f.input :target,
                    as: :text,
                    placeholder: "Pour quel but (pourquoi ?)",
                    label: "But",
                    class:'form-control' %>

      </div>
      <%= f.submit 'Ajouter', class: 'btn btn-default' %>
  <% end %>
</div>

<%= link_to 'Back', domain_deadlines_path(@domain) %>
