<!DOCTYPE html>
<html>
<head>
  <title>Persdev</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="col-md-10">
    <% if current_user %>
        <%= render "layouts/menu" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <% if current_user %>
        <strong><%= current_user.name %></strong> <br />
        <%= link_to "Se dÃ©connecter", signout_path, id: "sign_out" %>
    <% else %>
        <%= link_to image_tag('fb_connect.png', border: 0), "/auth/facebook", id: "sign_in" %>
    <% end %>
  </div>

  <div class="col-md-12">
    <%= yield %>
  </div>
</div>

</body>
</html>
